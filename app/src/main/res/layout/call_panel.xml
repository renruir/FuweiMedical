<!--            android:layout_height="80px"-->
<!--            android:layout_marginTop="20px"-->
<!--            android:onClick="onClick"-->
<!--            android:background="#FF9800" />-->
    </LinearLayout>

    <data>

        <variable
            name="AlarmDao"
            type="com.fuwei.aihospital.AlarmDao" />
    </data>


</layout>