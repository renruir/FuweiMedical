<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="AlarmDao" type="com.fuwei.aihospital.AlarmDao"/>
    </data>

    <LinearLayout
        android:layout_width="1920px"
        android:layout_height="360px"
        android:orientation="horizontal"
        tools:context="com.fuwei.aihospital.MainActivity">

        <LinearLayout
            android:id="@+id/type_color"
            android:orientation="vertical"
            android:background="#ed1941"
            android:layout_width="30px"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/call_location"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="100dp"
            android:textColor="#000000"
            android:layout_width="1000px"
            android:layout_height="wrap_content"
            android:text="@{AlarmDao.location}"/>


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="720px"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/call_type"
                android:text="紧急情况"
                android:textColor="#ed1941"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/call_duration"
                android:text="01:32"
                android:textColor="#000000"
                android:gravity="left"
                android:textSize="30dp"
                android:layout_marginTop="10px"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:layout_width="170px"
            android:layout_height="match_parent">

            <Button
                android:background="#2196F3"
                android:layout_width="80px"
                android:layout_height="80px" />

            <Button
                android:background="#4CAF50"
                android:layout_marginTop="20px"
                android:layout_width="80px"
                android:layout_height="80px" />

            <Button
                android:background="#FF9800"
                android:layout_marginTop="20px"
                android:layout_width="80px"
                android:layout_height="80px" />

        </LinearLayout>

    </LinearLayout>
</layout>